WITH current_holidays AS (
    SELECT date_value, holiday_name
    FROM sv3_res.date_dimension
    WHERE is_holiday = TRUE
),
exception_days AS (
    -- You'll need to create this table or CTE with the exceptional days
    -- For example:
    VALUES 
        ('2021-01-20'::date, 'Inauguration Day'),
        ('2021-04-15'::date, 'CFPB Chicago Conference'),
        -- Add more exceptional days as needed
),
total_holiday_table AS (
    SELECT date_value, holiday_name
    FROM current_holidays
    
    UNION
    
    SELECT * FROM exception_days
)
SELECT *
FROM total_holiday_table
ORDER BY date_value;
