import pandas as pd

def trim_csv_columns(file_path, output_file_path, max_columns=100):
    """
    Trims a CSV file to the specified maximum number of columns and saves the result.

    Parameters:
    file_path (str): The path to the input CSV file.
    output_file_path (str): The path for the output CSV file.
    max_columns (int): Maximum number of columns to retain. Defaults to 100.
    """

    # Read the CSV file
    df = pd.read_csv(file_path)

    # Trim the DataFrame to the first max_columns columns
    trimmed_df = df.iloc[:, :max_columns]

    # Write the trimmed DataFrame to a new CSV file
    trimmed_df.to_csv(output_file_path, index=False)

# Example usage
input_file_path = 'path/to/your/input.csv'  # Replace with the path to your input CSV file
output_file_path = 'path/to/your/output.csv'  # Replace with the path to your output CSV file
trim_csv_columns(input_file_path, output_file_path)
