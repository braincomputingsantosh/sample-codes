import re
from pathlib import Path

def extract_file_info(file_path):
    # Use Path to handle file paths consistently across operating systems
    path = Path(file_path)
    
    # Extract file name and extension
    file_name = path.name
    file_extension = path.suffix.lstrip('.')
    
    # Extract year and month using regex
    match = re.search(r'/(\d{4})/(\d{2})/', str(path))
    if match:
        year, month = match.groups()
    else:
        year, month = None, None
    
    return {
        "file_name": file_name,
        "file_extension": file_extension,
        "year": year,
        "month": month
    }

# Example usage
file_path = "/Volumes/staging/bk_mpo_raw/landing/heloc/2024/04/HELOCData_202404_ALL/HELOCData_202404_ALL_2024-06-11.csv"
result = extract_file_info(file_path)

print(f"File Name: {result['file_name']}")
print(f"File Extension: {result['file_extension']}")
print(f"Year: {result['year']}")
print(f"Month: {result['month']}")
