import sqlite3

# SQLite setup
db_name = 'mydatabase.db'
table_name = 'my_shapefile_data'

# Connect to SQLite database
conn = sqlite3.connect(db_name)
cursor = conn.cursor()

# Example 1: Fetch all data from the table
print("Fetching all data from the table:")
cursor.execute(f"SELECT * FROM {table_name}")
for row in cursor.fetchall():
    print(row)

# Example 2: Fetch specific columns (e.g., DBA, TECHNOLOGY)
print("\nFetching specific columns (DBA, TECHNOLOGY):")
cursor.execute(f"SELECT DBA, TECHNOLOGY FROM {table_name}")
for row in cursor.fetchall():
    print(row)

# Example 3: Conditional query (e.g., where TECHNOLOGY is a specific type)
specific_technology = 'YourTechnologyType'  # Replace with the actual technology type you're interested in
print(f"\nFetching rows where TECHNOLOGY is '{specific_technology}':")
cursor.execute(f"SELECT * FROM {table_name} WHERE TECHNOLOGY = ?", (specific_technology,))
for row in cursor.fetchall():
    print(row)

# Close the connection
conn.close()
